#!/bin/bash -exu

source /var/vcap/packages/golang-*/bosh/compile.env

ETCD_RELEASE_SRC="github.com/cloudfoundry-incubator/etcd-release/src"
ETCD_CONSISTENCY_CHECKER_SRC="$PWD/../src/$ETCD_RELEASE_SRC/"

mkdir -p "$ETCD_CONSISTENCY_CHECKER_SRC" "$BOSH_INSTALL_TARGET"/bin
cp -a * "$ETCD_CONSISTENCY_CHECKER_SRC"
mv ../src ./src

go build -o "$BOSH_INSTALL_TARGET"/bin/etcd-consistency-checker "src/$ETCD_RELEASE_SRC/etcd-consistency-checker/main.go"

chown vcap:vcap "${BOSH_INSTALL_TARGET}/bin/etcd-consistency-checker"
