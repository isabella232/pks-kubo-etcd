#!/bin/bash -exu

source /var/vcap/packages/golang-*/bosh/compile.env

ETCD_RELEASE_SRC="github.com/cloudfoundry-incubator/etcd-release/src"
ETCD_METRICS_SERVER_SRC="$PWD/../src/$ETCD_RELEASE_SRC/"

mkdir -p "$ETCD_METRICS_SERVER_SRC" "$BOSH_INSTALL_TARGET"/bin
cp -a * "$ETCD_METRICS_SERVER_SRC"
mv ../src ./src

go build -o "$BOSH_INSTALL_TARGET"/bin/etcd-metrics-server "src/$ETCD_RELEASE_SRC/etcd-metrics-server/cmd/etcd-metrics-server/main.go"

chown vcap:vcap "${BOSH_INSTALL_TARGET}/bin/etcd-metrics-server"
